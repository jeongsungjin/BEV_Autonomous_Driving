<?xml version="1.0"?>
<launch>
  <!-- 다중 차량 카메라 + 오도메트리 퍼블리셔 -->
  <node pkg="carla_camera_publisher" type="publish_multiple_carla_cam.py" name="multi_cam_pub"/>

  <!-- YOLOP 배치 추론 -->
  <node pkg="carla_camera_publisher"
        type="yolop_batch_inference_node.py"
        name="yolop_batch"
        output="screen">        
    <param name="save_bev" value="false"/>
    <param name="debug" value="false"/>
    <param name="da_thresh" value="0.53"/>
    <param name="ll_thresh" value="0.5"/>
    <param name="enable_costmap" value="true"/>
  </node>

  <!-- A* 경로 플래너 (선택사항) -->
  <!-- <node pkg="carla_camera_publisher"
        type="astar_path_planner.py"
        name="astar_planner"
        output="screen">
    <param name="costmap_topic" value="/carla/vehicle1/yolop/costmap"/>
    <param name="path_topic" value="/planned_path"/>
  </node> -->
</launch> 